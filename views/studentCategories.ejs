<!-- views/studentCategories.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Available Courses - Edutech</title>
    
    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #F4F4F4;
            margin: 0;
            padding: 0;
        }

        /* Navbar Styling */
        .navbar {
            background-color: #1C1D1F;
            padding: 10px 20px;
        }

        .navbar-brand, .navbar-nav .nav-link {
            color: white;
            font-size: 18px;
        }

        .navbar-nav .nav-link:hover {
            color: #007BFF;
        }

        /* Course Section */
        .container {
            padding-top: 40px;
        }

        .course-card {
            background-color: white;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
            min-height: 300px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .course-card:hover {
            transform: translateY(-5px);
        }

        .course-card h3 {
            font-size: 1.25rem;
        }

        .course-card i {
            font-size: 2rem;
            color: #007bff;
        }

        .content-list {
            max-height: 200px;
            overflow-y: auto;
        }

        /* Footer */
        .footer {
            background-color: #1C1D1F;
            color: white;
            padding: 20px;
            text-align: center;
            margin-top: 60px;
        }
    </style>
</head>
<body>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/student/dashboard">
            <i class="bi bi-mortarboard"></i> Edutech Student Dashboard
        </a>
        <div class="d-flex">
            <a href="/student/courses" class="nav-link">Home</a>
            <a href="/logout" class="btn btn-outline-light">
                <i class="bi bi-box-arrow-right"></i> Logout
            </a>
        </div>
    </div>
</nav>

<!-- Course Catalog Section -->
<div class="container">
    <h1 class="text-center mb-4"><i class="bi bi-collection"></i> Explore Courses</h1>
    
    <% if (courses && courses.length > 0) { %>
        <div class="row row-cols-1 row-cols-md-2 g-4">
            <% courses.forEach(course => { %>
                <div class="col">
                    <div class="card course-card">
                        <div class="card-body">
                            <h3 class="card-title"><%= course.title %></h3>
                            <p class="card-text text-muted"><%= course.description %></p>

                            <% if (!course.isEnrolled) { %>
                                <form action="/student/enroll" method="POST">
                                    <input type="hidden" name="courseId" value="<%= course.id || course.course_id %>">
                                    <button type="submit" class="btn btn-primary">Enroll</button>
                                </form>
                            <% } else { %>
                                <div class="mt-3">
                                    <h5><i class="bi bi-camera-video" style="font-size: 1.4rem;">
                                    </i> Course Videos</h5>
                                    <div class="content-list mb-3">
                                        <% if (course.videos && course.videos.length > 0) { %>
                                            <div class="list-group">
                                                <% course.videos.forEach(video => { %>
                                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                                        <span><%= video.video_url %></span>
                                                        <a href="/student/watch/<%= video.video_url %>" class="btn btn-sm btn-outline-primary">
                                                            <i class="bi bi-play-circle" style="font-size: 0.9rem;"></i> Watch
                                                        </a>
                                                        
                                                    </div>
                                                <% }) %>
                                            </div>
                                        <% } else { %>
                                            <div class="alert alert-info">No videos available</div>
                                        <% } %>
                                    </div>

                                    <h5><i class="bi bi-file-earmark" style="font-size: 1.4rem;"></i> Course Notes</h5>
                                    <div class="content-list">
                                        <% if (course.notes && course.notes.length > 0) { %>
                                            <div class="list-group">
                                                <% course.notes.forEach(note => { %>
                                                    <a href="/uploads/<%= note.note_url %>" 
                                                       class="list-group-item list-group-item-action"
                                                       target="_blank"
                                                       download>
                                                        <i class="bi bi-download" style="font-size: 1.4rem;"></i> <%= note.note_url %>
                                                    </a>
                                                <% }) %>
                                            </div>
                                        <% } else { %>
                                            <div class="alert alert-info">No notes available</div>
                                        <% } %>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                        <div class="card-footer bg-transparent text-muted">
                            <small>
                                Instructor: <%= course.instructor_name %> | 
                                Created: <%= new Date(course.created_at).toLocaleDateString() %>
                            </small>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <div class="alert alert-info text-center py-4">
            <i class="bi bi-info-circle-fill display-4 d-block mb-3"></i>
            <h4>No courses available</h4>
            <p>Check back later for new courses</p>
        </div>
    <% } %>
</div>

<!-- Footer -->
<div class="footer">
    &copy; 2025 Edutech Learning Platform. All rights reserved.
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
