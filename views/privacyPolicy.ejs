            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .privacy-policy-container h2 {
            color: #1C1D1F;
            font-weight: bold;
        }

        .privacy-policy-container p {
            font-size: 16px;
            color: #333;
            line-height: 1.6;
        }

        .privacy-policy-container ul {
            padding-left: 20px;
        }

        .privacy-policy-container ul li {
            margin-bottom: 10px;
        }

        /* Footer Styling */
        .footer {
            background-color: #1C1D1F;
            color: white;
            padding: 10px;
            text-align: center;
        }

        .footer a {
            color: #BBB;
            margin: 0 10px;
            text-decoration: none;
