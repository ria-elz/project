    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Arial', sans-serif;
            scroll-behavior: smooth;
            background-color: #F4F4F4;
        }

        /* Navbar Styling */
        .navbar {
            background-color: #1C1D1F;
            padding: 10px 20px;
